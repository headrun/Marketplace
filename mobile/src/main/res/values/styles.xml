<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/button_color</item>
    </style>

    <style name="EditText.EmailAuth" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
    </style>

    <style name="Textview.EmailAuth" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
    </style>

    <style name="Button.Blue" parent="@android:style/Widget.Holo.Button">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@color/button_color</item>
        <item name="android:height">50.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
